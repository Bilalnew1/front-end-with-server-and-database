<h3>{{viewTitle}}</h3>

<form action="/employee" method="POST" autocomplete="off">
  <input type="hidden" name="_id" value="{{employee._id}}" />
  <div>
    <label>Full Name</label>
    <input
      type="text"
      name="fullName"
      placeholder="Full Name"
      value="{{employee.fullName}}"
    />
    <div>
      {{employee.fullNameError}}</div>
  </div>
  <div>
    <label>Email</label>
    <input
      type="text"
      name="email"
      placeholder="Email"
      value="{{employee.email}}"
    />
    <div>
      {{employee.emailError}}</div>
  </div>
  <div>
    <div>
      <label>Mobile</label>
      <input
        type="text"
        name="mobile"
        placeholder="Mobile"
        value="{{employee.mobile}}"
      />
    </div>
    <div>
      <label>City</label>
      <input
        type="text"
        name="city"
        placeholder="City"
        value="{{employee.city}}"
      />
    </div>
  </div>
  <div>
    <button type="submit"><i></i>
      Submit</button>
    <a href="/employee/list"><i></i>
      View All</a>
  </div>
</form>